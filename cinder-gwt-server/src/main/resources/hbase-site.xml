<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

	<property>
		<name>hbase.rootdir</name>
		<value>hdfs://data-master.voole.com:9000/hbase</value>
	</property>
	<property>
		<name>dfs.replication</name>
		<value>2</value>
	</property>
	<property>
		<name>hbase.cluster.distributed</name>  
		<value>true</value> 
	</property>
	<property>
		<name>hbase.zookeeper.property.clientPort</name>  
		<value>2181</value>  
	</property> 
	<property> 
		<name>hbase.zookeeper.quorum</name>  
		<value>data-tj-slave1.voole.com,data-tj-slave2.voole.com,data-tj-slave3.voole.com</value>
	</property>  
	<property>
		<name>hbase.master</name>
		<value>data-master.voole.com</value>
	</property>
	<property>
		<name>hbase.zookeeper.property.dataDir</name>
		<value>/opt/data/zk_data</value>
	</property>

</configuration>
